{
  "name": "action-ts",
  "version": "0.0.8",
  "description": "Awesome type safe actions",
  "author": "Damian Paszkowski",
  "keywords": [
    "redux",
    "redux-actions",
    "type safe actions",
    "flux architecture",
    "flux",
    "typescript actions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/paszkowskiDamian/actions-ts"
  },
  "license": "MIT",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "main": "dist/action-ts.js",
  "module": "dist/action-ts.esm.js",
  "browser": "dist/action-ts.umd.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint --project './tsconfig.json'",
    "build": "microbundle -o ./build --strict",
    "rebuild": "rm -rf ./build && npm run build",
    "dev": "microbundle watch",
    "test": "jest --config jest.config.json ./src",
    "test:watch": "jest --config jest.config.json --watch ./src",
    "prepare": "npm run rebuild",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "jest": "^23.1.0",
    "microbundle": "^0.4.4",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.1"
  }
}
